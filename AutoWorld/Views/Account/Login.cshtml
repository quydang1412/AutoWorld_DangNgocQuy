@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model AutoWorld.Models.ViewModels.LoginView

<main>
    <!-- Carousel -->
    <div id="slides" class="carousel slide " data-ride="carousel">
        <ul class="carousel-indicators">
            <li data-target="#slides" data-slide-to="0" class="
					active"></li>
            <li data-target="#slides" data-slide-to="1"></li>
            <li data-target="#slides" data-slide-to="2"></li>
            <li data-target="#slides" data-slide-to="3"></li>
            <li data-target="#slides" data-slide-to="4"></li>
        </ul>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/Content/Library/images/carousel4.jpg" alt="">
                <div class=" carousel-caption d-none d-md-block">
                    <h1>Welcome to AutoWorld</h1>
                    <p class="slogan">The Power of Dreams</p>
                    <!-- <p>
                        <a href="products.html" class="btn btn-danger">All vehicles</a>
                    </p> -->
                </div>
            </div>
            <div class="carousel-item ">
                <img src="~/Content/Library/images/carousel0.jpg" alt="">

            </div>
            <div class="carousel-item ">
                <img src="~/Content/Library/images/carousel1.jpg" alt="">

            </div>
            <div class="carousel-item ">
                <img src="~/Content/Library/images/carousel2.jpg" alt="">

            </div>
            <div class="carousel-item ">
                <img src="~/Content/Library/images/carousel3.jpg" alt="">

            </div>

        </div>

        <a class="carousel-control-prev" href="#slides" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon text-danger"></span>
        </a>
        <a class="carousel-control-next" href="#slides" role="button" data-slide="next">
            <span class="carousel-control-next-icon text-danger"></span>
        </a>
    </div>
    <!-- /Carousel -->
    <!-- </form> -->
    <section class="my-3" id="log">
        <div class="container py-5">
            <div class="d-flex justify-content-center h-100">
                <div class="card py-3 ">
                    <div class="card-header">
                        <h3>Sign In</h3>
                        <p class="my-1">Please enter your username and password.</p>
                        <div class="d-flex justify-content-end social_icon">
                            <a href="https://www.facebook.com/login.php"><span><i class="fab fa-facebook-square"></i></span></a>
                            <a href="https://www.instagram.com/accounts/login/"><span><i class="fab fa-instagram-square"></i></span></a>
                            <a href="https://twitter.com/login"><span><i class="fab fa-twitter-square"></i></span></a>
                        </div>
                    </div>
                    <div class="card-body">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <form action="success.html">
                                <div class="input-group form-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fas fa-user"></i></span>
                                    </div>
                                    @Html.EditorFor(model => model.LoginName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter username" } })
                                    @Html.ValidationMessageFor(model => model.LoginName, "", new { @class = "text-danger" })
                                    @*<input type="text" class="form-control" placeholder="Enter username" required>*@

                                </div>
                                <div class="input-group form-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fas fa-key"></i></span>
                                    </div>
                                    @Html.PasswordFor(model => model.Password, new { @class = "form-control", @placeholder = "Enter password" })
                                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                    @*<input type="password" class="form-control" placeholder="Enter password" required>*@
                                </div>
                                <div class="row align-items-center remember">
                                    @Html.CheckBoxFor(model => model.RememberLogin, new { @type = "checkbox" })
                                    @Html.LabelFor(model => model.RememberLogin, htmlAttributes: new { @class = "form-check-label" })
                                    @*<input type="checkbox">Remember Me*@
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Login" class="btn float-right login_btn">
                                </div>
                            </form>

                        }
                    </div>
                    <div class="card-footer">
                        <div class="d-flex justify-content-center links">
                            Don't have an account?<a href="#slides">Sign Up</a>
                        </div>
                        <div class="d-flex justify-content-center links">
                            <a href="#slides">Forgot your password?</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- /sign in -->
</main>
<!-- /main -->

<link rel="stylesheet" href="~/Content/Library/css/login.css">
