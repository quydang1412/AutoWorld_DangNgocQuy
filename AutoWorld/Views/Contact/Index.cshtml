<!-- Contact Us------------------------------------------ -->
<div id="contact-section">
    <div class="container">
        <h2>Contact Us</h2>
        <p>Email us and keep upto date with our latest news</p>
        <div class="contact-form">
            <div class="icon-form">
                <a href="https://goo.gl/maps/9mt66YhCT2eZVua1A"><i class="icons fas fa-map-marker-alt"></i></a>
                <span class="form-info">6 Le Loi, Hue city, Viet Nam</span><br>
                <a href="tel:+84123456789">
                    <i class="icons fa fa-phone"></i>
                </a>
                <span class="form-info">Phone +84902345678</span>
                <br>
                <a href="mailto:HueAptech@gmail.com">
                    <i class="icons far fa-envelope"></i>
                </a>
                <span class="form-info">HueAptech@gmail.com</span>
            </div>
            <div>
                <form id="form">
                    <input type="text" name="name" id="name" required placeholder="Your Name">
                    <input type="email" name="mail" id="email" required placeholder="Your Email">
                    <input type="tel" name="tel" id="tel" required placeholder="Phone Number">
                    <textarea name="mess" id="mess" rows="7" placeholder="Your Message Here..."></textarea>
                    <button type="reset" id="btnContact" class="btn submit">Send<i class="fa fa-paper-plane "></i></button>
                </form>
            </div>

        </div>
    </div>
</div>

